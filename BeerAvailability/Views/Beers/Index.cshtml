@{
  Layout = "_Layout";
}

@using BeerAvailability.Models;

<h1>Beers</h1>

@if (@Model.Count == 0)
{
  <h3>No beers have been added yet!</h3>
} 

<ul>
  @foreach(Beer beer in Model)
  {
    <li>@Html.ActionLink($"{beer.Name}", "Details", new { id = beer.BeerId })</li>
  }
</ul>
<br>
@using (Html.BeginForm("DeleteAll", "Beers"))
{
  <input type="submit" value="DeleteAll" />
}

<p>@Html.ActionLink("Add new beer", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>