@{
  Layout = "_Layout";
}

@using BeerAvailability.ViewModels

@model RegisterViewModel

<h2>Register New User</h2>
<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.LabelFor(user => user.Email)
    @Html.TextBoxFor(user=> user.Email)<br>

    @Html.LabelFor(user => user.UserName)
    @Html.TextBoxFor(user=> user.UserName)<br>

    @Html.LabelFor(user=> user.Password)
    @Html.PasswordFor(user=> user.Password)<br>

    @Html.LabelFor(user=> user.ConfirmPassword)
    @Html.PasswordFor(user=> user.ConfirmPassword)

    @Html.LabelFor(user=> user.FirstName)
    @Html.TextBoxFor(user=> user.FirstName)

    @Html.LabelFor(user=> user.LastName)
    @Html.TextBoxFor(user=> user.LastName)

    <input type="submit" value="Register" />
}