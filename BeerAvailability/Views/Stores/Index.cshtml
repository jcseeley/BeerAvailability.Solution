@{
  Layout = "_Layout";
}

@using BeerAvailability.Models;
@model List<BeerAvailability.Models.Store>;

<h1>Stores:</h1>

@if (@Model.Count == 0)
{
  <h3>No stores have been added yet!</h3>
} 

@foreach (Store store in Model)
{
  <li>@Html.ActionLink($"{store.Name}", "Details", new { id = store.StoreId })</li>
}

<p>@Html.ActionLink("Add New Store", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>