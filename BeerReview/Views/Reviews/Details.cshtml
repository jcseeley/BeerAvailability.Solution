@{
  Layout = "_Layout";
}

@using BeerReview.Models;
@model BeerReview.Models.Review;

<h2>Review Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Title): @Html.DisplayFor(model => model.Title)</h3>
<h3>Beer Name: @Html.ActionLink($"{Model.Beer.Name}", "Details", "Beers", new { id = Model.Beer.BeerId })</h3>
<h3>User Name: @Html.ActionLink($"{Model.Drinker.Name}", "Details", "Drinkers", new { id = Model.Drinker.DrinkerId })</h3>

<h3>Review: @Html.DisplayFor(model => model.Description)</h3>

<p>@Html.ActionLink("Back to Review List", "Index")</p>
<p>@Html.ActionLink("Edit Review", "Edit", new { id = Model.ReviewId })</p>
<p>@Html.ActionLink("Delete Review", "Delete", new { id = Model.ReviewId })</p>