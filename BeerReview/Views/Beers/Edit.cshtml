@{
  Layout = "_Layout";
}

@model BeerReview.Models.Beer

<h2>Edit</h2>

<h4>Edit this beer: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.BeerId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.ABV)
  @Html.TextBoxFor(model => model.ABV, new { type = "float", required = "required" })

  <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to list", "Index")</p>